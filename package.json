{
  "name": "autoclaude",
  "version": "1.0.0",
  "description": "Automated context management across Claude Code sessions",
  "main": "dist/cli/index.js",
  "bin": {
    "autoclaude": "bin/autoclaude"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:tsc": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/cli/index.js",
    "test": "node --test dist/tests/*.test.js",
    "pretest": "npx esbuild tests/*.test.ts --bundle --platform=node --format=cjs --outdir=dist/tests --external:better-sqlite3 --sourcemap"
  },
  "keywords": [
    "claude-code",
    "context-management",
    "session-memory",
    "plugin"
  ],
  "author": "blaine",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "better-sqlite3": "^12.6.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.9.3"
  }
}
