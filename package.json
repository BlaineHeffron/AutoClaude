{
  "name": "autoclaude",
  "version": "1.0.0",
  "description": "Automated context management across Claude Code sessions",
  "main": "dist/cli/index.js",
  "bin": {
    "autoclaude": "bin/autoclaude"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:tsc": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/cli/index.js",
    "test": "node --test dist/tests/*.test.js",
    "pretest": "npx esbuild tests/*.test.ts --bundle --platform=node --format=cjs --outdir=dist/tests --external:better-sqlite3 --sourcemap",
    "bench:e2e": "npx esbuild benchmarks/e2e-comparison.ts --bundle --platform=node --format=cjs --outfile=dist/benchmarks/e2e-comparison.js --external:better-sqlite3 --sourcemap && node dist/benchmarks/e2e-comparison.js",
    "lint": "eslint src/ tests/",
    "format": "prettier --write src/ tests/",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "claude-code",
    "context-management",
    "session-memory",
    "plugin"
  ],
  "author": "blaine",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "better-sqlite3": "^12.6.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
